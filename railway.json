{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "providers": ["node"],
      "buildImage": "ghcr.io/railwayapp/nixpacks:ubuntu-1707941577",
      "phases": {
        "setup": {
          "nixPkgs": ["nodejs_20", "npm-9_x"]
        },
        "install": {
          "cmds": ["npm ci"]
        },
        "build": {
          "cmds": ["npm run build"]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "npx serve@latest dist -p ${PORT:-3000}",
    "healthcheckPath": "/",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
